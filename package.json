{
  "name": "nuxt-ts-starter",
  "version": "1.0.0",
  "description": "We love using Nuxt & Typescript ðŸ’šðŸ’™",
  "author": "Chanlito <chanlito@outlook.com>",
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "npm run clean && npm run build:client && npm run build:server",
    "build:client": "nuxt build",
    "build:server": "tsc -p server",
    "clean": "rimraf build",
    "generate": "nuxt generate",
    "dev": "cross-env NODE_ENV=development nodemon",
    "start": "cross-env NODE_ENV=production node build/server/main.js"
  },
  "notes": {
    "dependency-notes": {
      "compression": "compress response body",
      "fastify-formbody": "A Fastify plugin to parse x-www-form-urlencoded bodies"
    }
  },
  "dependencies": {
    "@nestjs/common": "^5.1.0",
    "@nestjs/core": "^5.1.0",
    "@nestjs/microservices": "^5.1.0",
    "@nestjs/websockets": "^5.1.0",
    "@nuxtjs/axios": "^5.0.1",
    "@nuxtjs/dotenv": "^1.1.0",
    "axios": "^0.18.0",
    "compression": "^1.7.2",
    "cross-env": "^5.1.3",
    "dotenv": "^5.0.1",
    "express": "^4.16.2",
    "fastify-formbody": "^2.0.0",
    "node-sass": "^4.9.3",
    "nuxt": "^1.4.0",
    "nuxtjs-extensions": "^1.8.0",
    "reflect-metadata": "^0.1.12",
    "rimraf": "^2.6.2",
    "rxjs": "^6.2.2",
    "sass-loader": "^7.1.0",
    "typescript": "^2.7.2",
    "vee-validate": "^2.0.5",
    "winston": "^2.4.0",
    "winston-daily-rotate-file": "^1.7.2"
  },
  "devDependencies": {
    "@types/compression": "0.0.35",
    "@types/express": "^4.11.1",
    "@types/node": "^9.4.6",
    "@types/winston": "^2.3.8",
    "babel-eslint": "^8.2.2",
    "eslint": "^4.18.2",
    "eslint-friendly-formatter": "^3.0.0",
    "eslint-loader": "^2.0.0",
    "eslint-plugin-vue": "^4.3.0",
    "nodemon": "^1.17.1",
    "ts-node": "^5.0.1",
    "tslint": "^5.9.1",
    "tslint-config-prettier": "^1.9.0"
  },
  "nodemonConfig": {
    "exec": "ts-node --project server/tsconfig.json server/main.ts",
    "ext": "js ts",
    "ignore": [
      "server/**/*.spec.ts"
    ],
    "watch": [
      "server",
      "nuxt.config.js"
    ]
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:vue/recommended"
    ],
    "env": {
      "node": true,
      "browser": true
    },
    "parserOptions": {
      "parser": "babel-eslint",
      "ecmaVersion": 8
    },
    "rules": {
      "semi": [
        "error",
        "always"
      ],
      "no-console": "off",
      "vue/max-attributes-per-line": 0
    }
  },
  "prettier": {
    "bracketSpacing": true,
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "none",
    "useTabs": false
  }
}
